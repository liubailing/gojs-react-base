{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"declarationDir": "lib",
		"module": "esnext",
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "build", "src/workflow/**/*", "src/App.tsx", "src/index.tsx"]
}
